                <Font size="13.0" />
            </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
        </Button>
        <ButtonBar layoutX="500.0" layoutY="346.0" prefHeight="40.0" prefWidth="94.0">
            <buttons>
                <Button minWidth="68.0" mnemonicParsing="false" onMouseClicked="#exit" prefHeight="26.0" prefWidth="75.0" style="-fx-background-color: Red;" text="Exit">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
            </buttons>
        </ButtonBar>
    </children>
</AnchorPane>
