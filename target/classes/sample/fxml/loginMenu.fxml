<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #06f3bd;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.view.LoginView">
    <children>
        <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="230.0" layoutY="24.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../png/ghost2.gif" />
            </image>
        </ImageView>
        <Label layoutX="188.0" layoutY="200.0" prefHeight="22.0" prefWidth="78.0" style="-fx-background-color: #f1f114; -fx-border-color: Green;" text="Username :">
            <font>
                <Font size="15.0" />
            </font>
        </Label>
        <Label layoutX="189.0" layoutY="243.0" prefHeight="22.0" prefWidth="78.0" style="-fx-background-color: Yellow; -fx-border-color: Green;" text="Password :">
            <font>
                <Font size="15.0" />
            </font>
        </Label>
        <TextField fx:id="usernameText" layoutX="285.0" layoutY="199.0" prefHeight="23.0" prefWidth="150.0" promptText="Username" />
        <PasswordField fx:id="passwordText" layoutX="285.0" layoutY="242.0" prefHeight="23.0" prefWidth="150.0" promptText="Password" />
